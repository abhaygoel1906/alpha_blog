<h3>Listing all articles</h3>
<%= link_to "Create New Article", new_article_path %> <br> <br>
<table border = 1>
  <tr>
    <th>Title</th> <th>Description</th>
  </tr>
  <% i=0 %>
  <% @articles.each do |a| %>
  <% i=i+1 %>
  <tr>
    <td><%= i %></td> <td><%= a.title %></td> <td><%= a.description %></td>
    <td><%= link_to 'Edit', edit_article_path(a) %></td>
    <td><%= link_to 'Show', article_path(a) %></td>
    <td><%= link_to 'Delete', article_path(a), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>