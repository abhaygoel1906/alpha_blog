<h1>Create an article </h1>

<% if @article.errors.any? %>
<h3>!! ERROR !!</h3>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |g| %>
<p>
  <%= g.label :title %> <br>
  <%= g.text_field :title %>
<br> 
  <%= g.label :description %> <br>
  <%= g.text_area :description %>
</p>
<br> <%= g.submit %>
<% end %>